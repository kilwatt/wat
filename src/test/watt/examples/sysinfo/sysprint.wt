import 'syscolors.wt'
import 'ext.tui'
import 'std.io'

type Label(key, value) {
    fun print {
        tui.render_line('Â· ' + key + ': ' + value)
    }
}

type Title(title, labels) {
    fun print {
        tui.render_line(colors.green + title + colors.reset)
        for i in 0 to labels.size() {
            labels.get(i).print()
        }
    }
}

type Printer {
    last_title := null

    fun refresh(titles) {
        tui.clear()
        for i in 0 to titles.size() {
            titles.get(i).print()
        }
    }
}